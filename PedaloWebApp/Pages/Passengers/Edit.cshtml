@page
@model PedaloWebApp.Pages.Passengers.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class=" text-primary">@ViewData["Title"]</h1>

<h4>Passenger</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Passenger.PassengerFirstName" class="control-label"></label>
                <input asp-for="Passenger.PassengerFirstName" class="form-control" required pattern="[A-Za-z]+" />
            </div>
            <div class="form-group">
                <label asp-for="Passenger.PassengerLastName" class="control-label"></label>
                <input asp-for="Passenger.PassengerLastName" class="form-control" required pattern="[A-Za-z]+" />
            </div>
      
            <div class="form-group">
                <input asp-for="Passenger.PassengerId" type="hidden" />
                <input type="submit" value="Edit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
