@page
@model PedaloWebApp.Pages.Passengers.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class =" text-danger ">@ViewData["Title"]</h1>

<h4>Passenger</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Passenger.PassengerFirstName" class="control-label"></label>
                <input asp-for="Passenger.PassengerFirstName" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="Passenger.PassengerLastName" class="control-label"></label>
                <input asp-for="Passenger.PassengerLastName" class="form-control" readonly="readonly" />
