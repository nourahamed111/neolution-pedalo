@page
@model PedaloWebApp.Pages.Bookings.CreateModel

<h1>Create Booking</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Booking.PedaloName">Pedalo Name</label>
                <select asp-for="Booking.PedaloName" class="form-control" required>
                    <option value="">Select a Pedalo</option>
                    @foreach (var pedalo in Model.Pedalos)
                    {
                        <option value="@pedalo.Name">@pedalo.Name</option>
                    }
                </select>
                <span asp-validation-for="Booking.PedaloName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.StartDate">Start Date</label>
                <input asp-for="Booking.StartDate" type="datetime-local" class="form-control" required />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.EndDate">End Date</label>
                <input asp-for="Booking.EndDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.CustomerFirstName">Customer First Name</label>
                <select asp-for="Booking.CustomerFirstName" class="form-control" required>
                    <option value="">Select a Customer First Name</option>
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.FirstName">@customer.FirstName</option>
                    }
                </select>
                <span asp-validation-for="Booking.CustomerFirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.CustomerLastName">Customer Last Name</label>
                <select asp-for="Booking.CustomerLastName" class="form-control" required>
                    <option value="">Select a Customer Last Name</option>
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.LastName">@customer.LastName</option>
                    }
                </select>
                <span asp-validation-for="Booking.CustomerLastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
            <div class="form-group">
                <a asp-page="/Customers/Create" class="btn btn-danger">Create New Customer</a>
            </div>

        </form>
    </div>
</div>


