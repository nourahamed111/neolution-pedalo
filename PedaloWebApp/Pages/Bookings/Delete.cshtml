@page
@model PedaloWebApp.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h4>Booking</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Booking.Customer.FirstName" class="control-label">@Html.DisplayNameFor(model => model.Booking.Customer.FirstName)</label>
                <input asp-for="Booking.Customer.FirstName" class="form-control" readonly="readonly" value="@Model.Booking.Customer.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="Booking.Customer.LastName" class="control-label">@Html.DisplayNameFor(model => model.Booking.Customer.LastName)</label>
                <input asp-for="Booking.Customer.LastName" class="form-control" readonly="readonly" value="@Model.Booking.Customer.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Booking.EndDate" class="control-label"></label>
                <input asp-for="Booking.EndDate" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="Booking.BookingId" type="hidden" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
